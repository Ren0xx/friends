<% if user_signed_in? %>
  <% content_for :title, "Friends" %>
  <h1>Friends</h1>
  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone</th>
      <th> Show </th>
      <th> Edit</th>
      <th> Destroy</th>
    </thead>
    <tbody>
      <% @friends.each do |friend| %>
        <% if friend.user == current_user%>
          <tr>
            <td><%= friend.first_name %></td>
            <td><%= friend.last_name %></td>
            <td><%= friend.email %></td>
            <td><%= friend.phone %></td>
            <td> <%= link_to "Show", friend, class: "btn btn-secondary" %> </td>
            <td><%= link_to "Edit", edit_friend_path(friend), class: "btn btn-secondary" %> </td>
            <td><%= button_to 'Destroy', friend, method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-outline-danger btn-sm" %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
  <%= link_to "New friend", new_friend_path, class: "btn btn-secondary" %>
<% else %>
  <h1>Home#index</h1>
  <p>Fin me  me in app/views/home/illn </p>
<% end %>
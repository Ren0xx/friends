<% content_for :title, "Friends" %>
<h1>Friends</h1>
<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <th>First name</th>
    <th>Last name</th>
    <th>Email</th>
    <th>Phone</th>
    <th> Show </th>
    <th> Edit</th>
    <th> Destroy</th>
  </thead>
  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.first_name %></td>
        <td><%= friend.last_name %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td> <%= link_to "Show", friend, class: "btn btn-secondary" %> </td>
        <td><%= link_to "Edit", edit_friend_path(friend), class: "btn btn-secondary" %> </td>
        <td><%= button_to "Destroy this friend", friend_path(friend), method: :delete %> </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "New friend", new_friend_path, class: "btn btn-secondary" %>
